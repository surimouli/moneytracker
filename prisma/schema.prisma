generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // URL comes from prisma.config.cjs / environment, so no url here
}

model Transaction {
  id          Int      @id @default(autoincrement())
  userId      String
  amount      Float
  type        String
  category    String
  description String?
  date        DateTime @default(now())
}

model Category {
  id        Int      @id @default(autoincrement())
  userId    String
  name      String
  createdAt DateTime @default(now())
}